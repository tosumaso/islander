<h1>showファイル</h1>
<div><%= @map.name%></div>
<%= image_tag "island_#{@map.id}.png", class: "island_image"%>

  <div class="container">
      <%= form_with(model: [@map, @post],url: map_posts_path(@map), method: :post, local: true) do |form| %>
        <%= form.text_area :content, placeholder: "投稿する", rows: "5" %>
        <%= form.collection_select(:evaluation_id, Evaluation.all, :id, :name, {}, {class: "evaluation-select"})%>
        <%= form.file_field :images, name: 'post[images][]', id: 'post_image' %>
        <div id="image-list"></div>
        <%= form.submit "SEND" %>
      <% end %>
  </div>

    <div class="comments">
    <h4>＜投稿一覧＞</h4>
      <% if @posts %>
        <% @posts.each do |post| %>
          <p>
            <%= post.user.name%>
            <%= l post.created_at%>
            <%= post.content %>
            <%= post.evaluation.name%>
            <div class="messages">
              <% post.images.each do |image| %>
              <%= image_tag image, class:'images' %>
              <% end %>
            </div>
          </p>
        <% end %>
      <% end %>
  </div>

  <div class="container">
      <%= form_with(model: [@map, @comment], url: map_comments_path(@map), method: :post, local: true) do |form| %>
        <%= form.text_area :content, placeholder: "投稿する", rows: "5" %>
        <%= form.submit "SEND", id: "comment_submit" %>
      <% end %>
  </div>

    <div class="comments">
    <h4>＜コメント欄＞</h4>
    <div class="comments_list" id="comments_list">
      <% if @comments %>
        <% @comments.each do |comment| %>
          <div class="comment">
            <div><%= comment.user.name%></div>
            <div><%= l comment.created_at%></div>
            <div><%= comment.content %></div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>