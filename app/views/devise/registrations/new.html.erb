<div class="wrapper_home">

<header>
  <%= image_tag "home_logo.png"%>
</header>

<div class="devise_wrapper">
<h2 class="devise_title">ユーザー新規登録</h2>

<%= form_with model: @user, url: user_registration_path, class: "registration-main", local: true do |f| %>

   <%= render partial: 'shared/error_messages', locals: {model: @user}%>

    <div class="form_group">
      <div class="devise_form">
        <label class="form_text">名前(10文字以内)</label>
      </div>
      <%= f.text_area :name, class:"input_box", rows: 1, autofocus: true %>
    </div>
    <div class="form_group">
      <div class="devise_form">
        <label class="form_text">メールアドレス</label>
      </div>
      <%= f.email_field :email, class:"input_box" %>
    </div>
    <div class="form_group">
      <div class="devise_form">
        <label class="form_text">パスワード(英数字含む6文字以上)</label>
      </div>
      <%= f.password_field :password, class:"input_box"%>
    </div>
    <div class="form_group">
      <div class="devise_form">
        <label class="form_text">パスワード(確認用)</label>
      </div>
      <%= f.password_field :password_confirmation, class:"input_box"%>
    </div>
    <div class="submit_btn">
      <%= f.submit "登録", class: "user_btn"%>
    </div>
  <% end %>
</div>
</div>
